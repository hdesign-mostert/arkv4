@{
    ViewBag.Title = "Sliders";
    ViewBag.PageBack = "Features";
}

@Html.Partial("Navigation-default")
@Html.Partial("promo-default")



<div>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i></a></li>
        <li class="breadcrumb-item"><a href="/features">@ViewBag.PageBack</a></li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>

    </ol>
</div>

<section>
 <div class="container-fluid mt-3">
    <header class="parallax-window py-5" data-parallax="scroll" data-image-src="/content/images/10.png" style="min-height: 521px">
        <section class="py-5 parallax-section parallax">
            <div class="container">
                <div class="row font-secondary font-weight-light text-uppercase word-spacing-lg letter-spacing-lg">
                    <div class="col col-md-6">
                       <p class="mb-0">Elon Musk</p>
                        <h1 class="display-4 font-weight-light text-uppercase text-primary">Any product that needs a manual to work is broken. </h1>
                        <span class="border-bottom-short-dark mt-4 d-block"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 ml-auto">
                        <p class="text-uppercase small">Bacon ipsum dolor amet cow venison alcatra, tongue pork loin sausage shoulder turkey frankfurter t-bone doner burgdoggen.</p>

                       <button class="btn btn-primary btn-square text-uppercase">Contact Us</button>
                       <button class="btn btn-primary btn-square-outline text-uppercase">More Info</button>
                    </div>
                </div>
            </div>
        </section>
    </header>
</div>


</section>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p class="lead">Full Background Bootstrap 4 Carousel</p>
        </div>
    </div>
</div>

<section>
    <div class="carousel slide" id="slider" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#slider" data-slide-to="0" class="active"></li>
            <li data-target="#slider" data-slide-to="1"></li>
            <li data-target="#slider" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item carousel-full-bg active">
            </div>
            <div class="carousel-item carousel-full-bg">
            </div>
            <div class="carousel-item carousel-full-bg">
            </div>
        </div>
        <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<section>
    <div class="container mt-5">
       <p class="lead">Default Bootstrap 4 Carousel</p>
        <div class="row">
            <div class="col">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/content/images/1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/content/images/2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/content/images/3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

    </div>
</section>

<section>


</section>





