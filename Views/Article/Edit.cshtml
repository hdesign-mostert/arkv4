                        </div>*@
                </div>


                @Html.StopForm()

            </div>

            <div class="modal-footer">
                <a class="btn btn-primary" data-bind="click: Save">Save</a>
                <a class="btn btn-default" data-dismiss="modal" aria-hidden="true" data-bind="click: Cancel">Cancel</a>
            </div>


        </div>
    </div>
</div>

