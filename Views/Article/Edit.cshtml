                            <div class="col-sm-8">
                                @Html.Partial("../ArticleImage/Edit", new Ark.Models.ArticleImage())
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6">
                     <div class="form-group">
                            @Html.FormControlFor(x => x.Content, ControlType.RichText)
                        </div>
                        </div>
