@model Ark.Models.Article

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<div data-bind="stopBinding:true">

<div id="ArticleEdit" style="display: none" class="modal fade in">
    <div class="modal-dialog" style="width: 98%;">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-bind="click: Cancel" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add/Edit</h4>
            </div>

            <div class="modal-body">

                @Html.StartForm(new Ark.Models.FormContainerControl("ArticlesEdit", "/", true))

                @*@Html.HiddenFor(model => model.ArticleID, new { id = "ArticleID" })*@


                <div class="row">
                    <div class="col-sm-6">

                        <div class="form-group">
                            @Html.FormControlFor(m => m.Author, ControlType.Textbox)
                        </div>


                        <div class="form-group">
                            @Html.FormControlFor(m => m.Subject, ControlType.Textbox)
                        </div>


                        <div class="form-group">
                            @Html.FormControlFor(m => m.Summary, ControlType.Textbox)
                        </div>

                        <div class="form-group">
                            @Html.FormControlFor(m => m.CategoryID,ViewData["Categories"] as SelectList,false)
                        </div>

                              <div class="form-group">
                            @Html.FormControlFor(m => m.Tags, ControlType.Textbox)
                        </div>

                         <div class="form-group">
                            @Html.FormControlFor(m => m.IsPublished, ControlType.Checkbox)
                        </div>

                         <div class="form-group">
                            @Html.FormControlFor(m => m.PublishDate , ControlType.Textbox)
                        </div>
